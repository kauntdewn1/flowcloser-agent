{
	"extends": "./packages/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,
		"paths": {
			"@iqai/adk": ["./packages/adk/src/index.ts"],
			"@iqai/adk/*": ["./packages/adk/src/*"]
		}
	},
	"include": ["flowcloser.ts", "src/**/*"],
	"exclude": ["node_modules", "dist"]
}
